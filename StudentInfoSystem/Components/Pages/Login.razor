@page "/login"

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <form action="/auth/login" method="post">
                         <div class="mb-3">
                            <label>Email</label>
                            <input name="email" class="form-control" value="student@school.com" />
                        </div>
                        <div class="mb-3">
                            <label>Password</label>
                            <input name="password" class="form-control" type="password" value="123" />
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                    
                    @if (IsInvalid)
                    {
                        <div class="alert alert-danger mt-3">Invalid login attempt.</div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <small>Default Users:</small><br>
                    <small>Admin: admin@school.com / 123</small><br>
                    <small>Lecturer: lecturer@school.com / 123</small><br>
                    <small>Student: student@school.com / 123</small>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public bool IsInvalid { get; set; }
}
